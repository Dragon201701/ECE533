Cell["\<\
Here\[CloseCurlyQuote]s a way to imitate Matlab\[CloseCurlyQuote]s filter \
function \
\>", "Text",
 CellChangeTimes->{{3.5723596337310667`*^9, 3.572359653399742*^9}}],

Cell[BoxData[{
 RowBox[{"Clear", "@", "filter"}], "\n", 
 RowBox[{
  RowBox[{"filter", "[", 
   RowBox[{"b_List", ",", "a_List", ",", "x_List"}], "]"}], ":=", 
  RowBox[{"Module", "[", 
   RowBox[{
    RowBox[{"{", 
     RowBox[{"y", ",", 
      RowBox[{"L", "=", 
       RowBox[{"Length", "@", "x"}]}], ",", 
      RowBox[{"P", "=", 
       RowBox[{
        RowBox[{"Length", "@", "b"}], "-", "1"}]}], ",", 
      RowBox[{"Q", "=", 
       RowBox[{
        RowBox[{"Length", "@", "a"}], "-", "1"}]}], ",", "X"}], "}"}], ",", 
    RowBox[{
     RowBox[{"MapIndexed", "[", 
      RowBox[{
       RowBox[{
        RowBox[{"(", 
         RowBox[{
          RowBox[{"X", "[", 
           RowBox[{"#2", "[", 
            RowBox[{"[", "1", "]"}], "]"}], "]"}], "=", "#"}], ")"}], "&"}], 
       ",", "x"}], "]"}], ";", "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"X", "[", "_", "]"}], "=", "0"}], ";", "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"y", "[", 
       RowBox[{"0", "|", "0.", "|", 
        RowBox[{"_", "?", "Negative"}]}], "]"}], "=", "0"}], ";", 
     "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"y", "[", "n_", "]"}], ":=", 
      RowBox[{
       RowBox[{"y", "[", "n", "]"}], "=", 
       RowBox[{
        RowBox[{"(", 
         RowBox[{
          RowBox[{"Total", "[", 
           RowBox[{"b", " ", 
            RowBox[{"Table", "[", 
             RowBox[{
              RowBox[{"X", "[", 
               RowBox[{"n", "-", "i"}], "]"}], ",", 
              RowBox[{"{", 
               RowBox[{"i", ",", "0", ",", "P"}], "}"}]}], "]"}]}], "]"}], 
          "-", 
          RowBox[{"Total", "[", 
           RowBox[{
            RowBox[{"Rest", "@", "a"}], " ", 
            RowBox[{"Table", "[", 
             RowBox[{
              RowBox[{"y", "[", 
               RowBox[{"n", "-", "j"}], "]"}], ",", 
              RowBox[{"{", 
               RowBox[{"j", ",", "Q"}], "}"}]}], "]"}]}], "]"}]}], ")"}], "/", 
        RowBox[{"First", "@", "a"}]}]}]}], ";", "\[IndentingNewLine]", 
     RowBox[{"Table", "[", 
      RowBox[{
       RowBox[{"y", "[", "n", "]"}], ",", 
       RowBox[{"{", 
        RowBox[{"n", ",", "1", ",", "L"}], "}"}]}], "]"}]}]}], 
   "]"}]}]}], "Input",
 CellChangeTimes->{{3.572359577990615*^9, 3.5723595779932947`*^9}}]
}, Open  ]]
